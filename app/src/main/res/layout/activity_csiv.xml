<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.example.ahmed.vote.csiv">

    <ImageButton
        android:id="@+id/ibamer"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/aamirc"
        android:layout_alignTop="@+id/ibali"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/ibali"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ali"
        android:layout_above="@+id/ibzohaib"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="41dp" />

    <ImageButton
        android:id="@+id/ibzohaib"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/zohaib"
        android:layout_marginBottom="11dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/ibahmed"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ahmed"
        android:layout_alignTop="@+id/ibzohaib"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tti"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"
        android:paddingTop="12dp"
        android:text="CSI Candidates"
        android:textAlignment="center"
        android:textColor="#420666"
        android:textSize="30sp" />

</RelativeLayout>
